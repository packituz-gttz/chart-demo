{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "appName": {
      "default": "my-app",
      "required": [],
      "title": "appName",
      "type": "string",
      "maxLength": 10,
      "minLength": 5
    },
    "team": {
      "required": [],
      "title": "team",
      "type": "string",
      "minLength": 2
    },
    "favourite": {
      "default": "true",
      "required": [],
      "title": "favourite",
      "type": "boolean"
    },
    "replicas": {
      "default": 1,
      "required": [],
      "title": "replicas",
      "type": "integer",
      "minimum": 1
    },
    "environmentVars": {
      "title": "environment variables",
      "type": "object"
    }
  },
  "required": [
    "appName",
    "team"
  ],
  "type": "object"
}